	<includeParams0 includeFile="Fsr2015Gray5ParamCam.xml" />
	<includeParams0 includeFile="idealCam.xml" />
	<includeParams0 includeFile="testCamera.xml" />
	<includeParams includeFile="S3FishEye5ParamCam-AgisoftLens.xml" />
